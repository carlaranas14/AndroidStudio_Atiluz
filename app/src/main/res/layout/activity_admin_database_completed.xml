                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_dashboardcompletedTableColumn5_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/drawer_boarder"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

        </TableRow>

        <!-- table 2nd row -->
        <TableRow>

            <TextView
                android:id="@+id/admin_dashboardcompletedTableColumn1_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/drawer_boarder"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_dashboardcompletedTableColumn2_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/drawer_boarder"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_dashboardcompletedTableColumn3_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/drawer_boarder"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_dashboardcompletedTableColumn4_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/drawer_boarder"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_dashboardcompletedTableColumn5_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/drawer_boarder"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="15sp" />

        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>